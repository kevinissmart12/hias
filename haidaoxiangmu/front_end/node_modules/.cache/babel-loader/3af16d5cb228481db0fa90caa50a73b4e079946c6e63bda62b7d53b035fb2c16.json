{"ast":null,"code":"import random from '../../api/random';\nexport default {\n  name: 'addProducts',\n  data() {\n    return {\n      id: 1,\n      imageName: '',\n      tempImgUrl: '',\n      form: {\n        name: '',\n        type: '',\n        description: '',\n        imgUrl: '',\n        breedTech: '',\n        diseases: ''\n      }\n    };\n  },\n  methods: {\n    handleAvatarSuccess(res, file) {\n      let type = file.name.replace(/.+\\./, \".\");\n      this.tempImgUrl = URL.createObjectURL(file.raw);\n      //时间戳+token前十位+6位随机数\n      this.imageName = random.randomImageName(6) + type;\n    },\n    beforeAvatarUpload(file) {\n      const isJPG = file.type === 'image/jpeg';\n      const isLt2M = file.size / 1024 / 1024 < 10;\n      if (!isJPG) {\n        this.$message.error('上传头像图片只能是 JPG 格式!');\n      }\n      if (!isLt2M) {\n        this.$message.error('上传头像图片大小不能超过 2MB!');\n      }\n      return isJPG && isLt2M;\n    },\n    //上传图片，用form-data\n    upload() {\n      const formData = new FormData();\n      formData.append('file', this.form.imgUrl);\n      formData.append('name', this.imageName);\n      this.$axios({\n        url: '/api/products/upload',\n        method: 'POST',\n        headers: {\n          \"Content-Type\": \"multipart/form-data\"\n        },\n        data: formData\n      }).then(res => {\n        console.log(res.data.data.imgUrl);\n        this.form.imgUrl = 'http://localhost:3000' + res.data.data.imgUrl;\n      });\n    },\n    //上传水产信息\n    addProducts() {\n      let data = this.qs.stringify(this.form);\n      this.$axios({\n        url: '/api/products/add',\n        method: 'POST',\n        data: data\n      }).then(res => {\n        console.log(res.data);\n        if (res.data.status == 401) return;\n        if (res.data.status !== 200) {\n          return this.$message.error(res.data.data.msg);\n        } else {\n          this.upload();\n        }\n      });\n    },\n    //通过id获取水产信息\n    getProducts(id) {\n      this.$axios({\n        method: \"GET\",\n        url: `/api/products/get?id=${id}`\n      }).then(res => {\n        console.log(res.data.data);\n        let data = res.data.data.data;\n        this.form = data;\n      });\n    },\n    //获取所有水产信息\n    getAllProducts() {\n      this.$axios({\n        method: \"GET\",\n        url: `/api/products/getAll`\n      }).then(res => {\n        console.log(res.data.data);\n      });\n    },\n    //根据id修改水产品\n    updateProducts() {\n      let data = this.qs.stringify(this.form);\n      this.$axios({\n        url: '/api/products/update',\n        method: 'POST',\n        data: data\n      }).then(res => {\n        console.log(res.data);\n        if (res.data.status == 401) return;\n        if (res.data.status !== 200) {\n          return this.$message.error(res.data.data.msg);\n        } else {\n          this.upload();\n        }\n      });\n    },\n    onSubmit() {\n      console.log('submit!');\n    }\n  },\n  mounted() {\n    this.getProducts(this.id);\n\n    // this.getAllProducts()\n  }\n};","map":{"version":3,"mappings":"AAuGA;AACA;EACAA;EACAC;IACA;MACAC;MACAC;MACAC;MACAC;QACAL;QACAM;QACAC;QACAC;QACAC;QACAC;MACA;IAEA;EACA;EACAC;IACAC;MACA;MACA;MACA;MACA;IAGA;IACAC;MACA;MACA;MAEA;QACA;MACA;MACA;QACA;MACA;MACA;IACA;IACA;IACAC;MAEA;MACAC;MACAA;MAEA;QACAC;QACAC;QACAC;UAAA;QAAA;QACAjB;MACA;QACAkB;QACA;MACA;IACA;IACA;IACAC;MACA;MACA;QACAJ;QACAC;QACAhB;MACA;QACAkB;QACA;QACA;UACA;QACA;UACA;QACA;MACA;IACA;IACA;IACAE;MACA;QACAJ;QACAD;MACA;QACAG;QACA;QAEA;MACA;IACA;IACA;IACAG;MACA;QACAL;QACAD;MACA;QACAG;MAEA;IACA;IACA;IACAI;MACA;MACA;QACAP;QACAC;QACAhB;MACA;QACAkB;QACA;QACA;UACA;QACA;UACA;QACA;MACA;IACA;IACAK;MACAL;IACA;EAEA;EACAM;IACA;;IAEA;EACA;AAEA","names":["name","data","id","imageName","tempImgUrl","form","type","description","imgUrl","breedTech","diseases","methods","handleAvatarSuccess","beforeAvatarUpload","upload","formData","url","method","headers","console","addProducts","getProducts","getAllProducts","updateProducts","onSubmit","mounted"],"sourceRoot":"src/components/products","sources":["AddProducts.vue"],"sourcesContent":["<template>\r\n    <div class=\"addProducts\">\r\n        \r\n        <!-- card -->\r\n        <el-card>\r\n\r\n            <!-- form -->\r\n            <el-form ref=\"form\" :model=\"form\" label-width=\"80px\">\r\n                <el-form-item label=\"品种名称\">\r\n                    <el-input v-model=\"form.name\"></el-input>\r\n                </el-form-item>\r\n\r\n                <el-form-item label=\"所属种类\">\r\n                    <el-input v-model=\"form.type\"></el-input>\r\n                </el-form-item>\r\n\r\n                <el-form-item label=\"描述\">\r\n                    <el-input v-model=\"form.description\"></el-input>\r\n                </el-form-item>\r\n\r\n                <el-form-item label=\"图片\">\r\n                    <el-upload\r\n                        class=\"avatar-uploader\"\r\n                        action=\"https://jsonplaceholder.typicode.com/posts/\"\r\n                        :show-file-list=\"false\"\r\n                        :on-success=\"handleAvatarSuccess\"\r\n                    >\r\n                        <img v-show=\"form.imgUrl\" :src=\"form.imgUrl\" class=\"avatar\">\r\n                        <img v-show=\"tempImgUrl&!form.imgUrl\" :src=\"tempImgUrl\" >\r\n                        <i v-show=\"!form.imgUrl&!tempImgUrl\" class=\"el-icon-plus avatar-uploader-icon\"></i>\r\n                    </el-upload>\r\n                </el-form-item>\r\n\r\n                <el-form-item label=\"养殖技术\">\r\n                    <el-input v-model=\"form.breedTech\"></el-input>\r\n                </el-form-item>\r\n\r\n                <el-form-item label=\"病害\">\r\n                    <el-input v-model=\"form.diseases\"></el-input>\r\n                </el-form-item>\r\n\r\n                <el-form-item>\r\n                    <el-button type=\"primary\" @click=\"addProducts\">添加海产</el-button>\r\n                    <el-button type=\"primary\" @click='updateProducts'>修改海产</el-button>\r\n\r\n                    <el-button>取消</el-button>\r\n                </el-form-item>\r\n\r\n            </el-form>\r\n        </el-card>\r\n        <!-- 添加海产 -->\r\n        <!-- <div class=\"add-products\">\r\n\r\n            <div class=\"name\">\r\n                <span>品种名称</span>\r\n                <input type=\"text\" v-model=\"name\">\r\n            </div>\r\n\r\n            <div class=\"type\">\r\n                <span>所属种类</span>\r\n                <input type=\"text\" v-model=\"type\">\r\n            </div>\r\n\r\n            <div class=\"description\">\r\n                <span>描述</span>\r\n                <input type=\"text\" v-model=\"description\">\r\n            </div>\r\n\r\n            <div class=\"imgUrl\">\r\n                <span>图片</span>\r\n                <el-upload\r\n                    class=\"avatar-uploader\"\r\n                    action=\"https://jsonplaceholder.typicode.com/posts/\"\r\n                    :show-file-list=\"false\"\r\n                    :on-success=\"handleAvatarSuccess\"\r\n                    \r\n                >\r\n                    <img v-if=\"imgUrl\" :src=\"imgUrl\" class=\"avatar\">\r\n                    <i v-else class=\"el-icon-plus avatar-uploader-icon\"></i>\r\n                </el-upload>\r\n            </div>\r\n\r\n            <div class=\"breedTech\">\r\n                <span>养殖技术</span>\r\n                <input type=\"text\" v-model=\"breedTech\">\r\n            </div>\r\n\r\n            <div class=\"diseases\">\r\n                <span>病害</span>\r\n                <input type=\"text\" v-model=\"diseases\">\r\n            </div>\r\n\r\n            <button @click=\"addProducts\">添加海产</button>\r\n\r\n            <button @click='updateProducts()'>修改海产</button>\r\n\r\n        </div> -->\r\n\r\n\r\n    </div>\r\n</template>\r\n\r\n<script>\r\nimport random from '../../api/random'\r\nexport default {\r\n    name:'addProducts',\r\n    data() {\r\n        return {\r\n            id:1,\r\n            imageName:'',\r\n            tempImgUrl:'',\r\n            form: {\r\n                name: '',\r\n                type:'',\r\n                description:'',\r\n                imgUrl:'',\r\n                breedTech:'',\r\n                diseases:'',\r\n            },\r\n\r\n        };\r\n    },\r\n    methods: {\r\n        handleAvatarSuccess(res, file) {\r\n            let type=file.name.replace(/.+\\./, \".\")\r\n            this.tempImgUrl=URL.createObjectURL(file.raw)\r\n            //时间戳+token前十位+6位随机数\r\n            this.imageName=random.randomImageName(6)+type\r\n\r\n            \r\n        },\r\n        beforeAvatarUpload(file) {\r\n            const isJPG = file.type === 'image/jpeg';\r\n            const isLt2M = file.size / 1024 / 1024 < 10;\r\n\r\n            if (!isJPG) {\r\n            this.$message.error('上传头像图片只能是 JPG 格式!');\r\n            }\r\n            if (!isLt2M) {\r\n            this.$message.error('上传头像图片大小不能超过 2MB!');\r\n            }\r\n            return isJPG && isLt2M;\r\n        },\r\n        //上传图片，用form-data\r\n        upload(){\r\n\r\n            const formData=new FormData()\r\n            formData.append('file',this.form.imgUrl)\r\n            formData.append('name',this.imageName)\r\n\r\n            this.$axios({\r\n                url:'/api/products/upload',\r\n                method:'POST',\r\n                headers:{\"Content-Type\":\"multipart/form-data\"},\r\n                data:formData\r\n            }).then(res=>{\r\n                console.log(res.data.data.imgUrl);\r\n                this.form.imgUrl='http://localhost:3000'+res.data.data.imgUrl\r\n            })\r\n        },\r\n        //上传水产信息\r\n        addProducts(){\r\n            let data=this.qs.stringify(this.form)\r\n            this.$axios({\r\n                url:'/api/products/add',\r\n                method:'POST',\r\n                data:data\r\n            }).then(res=>{\r\n                console.log(res.data);\r\n                if(res.data.status==401)return\r\n                if(res.data.status!==200){\r\n                    return this.$message.error(res.data.data.msg);\r\n                }else{\r\n                    this.upload()\r\n                }\r\n            })\r\n        },\r\n        //通过id获取水产信息\r\n        getProducts(id){\r\n            this.$axios({\r\n                method:\"GET\",\r\n                url:`/api/products/get?id=${id}`,\r\n            }).then(res=>{\r\n                console.log(res.data.data);\r\n                let data=res.data.data.data\r\n\r\n                this.form=data\r\n            })\r\n        },\r\n        //获取所有水产信息\r\n        getAllProducts(){\r\n            this.$axios({\r\n                method:\"GET\",\r\n                url:`/api/products/getAll`,\r\n            }).then(res=>{\r\n                console.log(res.data.data);\r\n\r\n            })\r\n        },\r\n        //根据id修改水产品\r\n        updateProducts(){\r\n            let data=this.qs.stringify(this.form)\r\n            this.$axios({\r\n                url:'/api/products/update',\r\n                method:'POST',\r\n                data:data\r\n            }).then(res=>{\r\n                console.log(res.data);\r\n                if(res.data.status==401)return\r\n                if(res.data.status!==200){\r\n                    return this.$message.error(res.data.data.msg);\r\n                }else{\r\n                    this.upload()\r\n                }\r\n            })\r\n        },\r\n        onSubmit() {\r\n            console.log('submit!');\r\n        }\r\n\r\n    },\r\n    mounted(){\r\n        this.getProducts(this.id)\r\n\r\n        // this.getAllProducts()\r\n    }\r\n\r\n}\r\n</script>\r\n\r\n<style scoped lang=\"less\">\r\n    .el-upload {\r\n        border: 1px dashed #d9d9d9;\r\n        border-radius: 6px;\r\n        cursor: pointer;\r\n        position: relative;\r\n        overflow: hidden;\r\n    }\r\n    .el-upload:hover {\r\n        border-color: #409EFF;\r\n    }\r\n    .avatar-uploader-icon {\r\n        font-size: 28px;\r\n        color: #8c939d;\r\n        width: 178px;\r\n        height: 178px;\r\n        line-height: 178px;\r\n        text-align: center;\r\n    }\r\n    .avatar {\r\n        width: 178px;\r\n        height: 178px;\r\n        display: block;\r\n    }\r\n\r\n    .addProducts{\r\n        width: 100%;\r\n        height: 100%;\r\n\r\n        .el-card{\r\n            width: 100%;\r\n            height: 100%;\r\n        }\r\n    }\r\n\r\n    \r\n</style>"]},"metadata":{},"sourceType":"module","externalDependencies":[]}